{
	"source": ".",
	"includes": ["\\.*lib/.*\\.js$"],
	"excludes": [
		"\\.*node_modules/.*\\.js$",
		"\\.*doc/.*\\.js$",
		"\\.*test/.*\\.js$"
	],
	"destination": "./doc/source/",
	"plugins": [
		{
			"name": "esdoc-standard-plugin",
			"option": {
				"unexportedIdentifier": {"enable": true},
				"brand": {
					"title": "R6 SDK - Javascript edition",
					"logo": "./doc/logo/r6.png",
					"description": "",
					"repository": "https://github.com/r6-sdk-js.git",
					"site": "http://r6bros.eu"
				}
			}
		}
	]
}